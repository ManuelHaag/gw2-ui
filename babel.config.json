{
  "babelrcRoots": [".", "packages/*"],
  "presets": [
    [
      "@babel/env",
      {
        "modules": false,
        "loose": true
      }
    ],
    [
      "@babel/typescript",
      {
        "modules": false,
        "loose": true
      }
    ]
  ],
  "plugins": [["@babel/plugin-transform-runtime", { "corejs": 3 }]],
  "env": {
    "commonjs": {
      "presets": [
        [
          "@babel/env",
          {
            "loose": true
          }
        ]
      ]
    },
    "webpack": {
      "plugins": [
        [
          "@babel/plugin-transform-runtime",
          { "corejs": 3, "useESModules": true }
        ]
      ]
    }
  }
}
