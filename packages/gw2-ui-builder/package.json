{
  "name": "gw2-ui-builder-bulk",
  "version": "0.2.4",
  "description": "Builder functions to create custom Guild Wars 2 items",
  "keywords": [
    "guild wars 2",
    "gw2"
  ],
  "homepage": "https://github.com/gw2princeps/gw2-ui",
  "bugs": "https://github.com/gw2princeps/gw2-ui/issues",
  "repository": "https://github.com/gw2princeps/gw2-ui/tree/master/packages/gw2-ui-builder",
  "license": "MIT",
  "author": "Manuel Haag <manuel@haag.online>",
  "sideEffects": false,
  "main": "lib/index.js",
  "unpkg": "dist/gw2-ui-builder.min.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "lib",
    "es",
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "run-s clean",
    "build": "run-p build:* build:*:*",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel --root-mode upward src -d lib",
    "build:es": "babel --root-mode upward src -d es",
    "build:umd": "cross-env BABEL_ENV=webpack webpack --mode development -o dist/gw2-ui-builder.js",
    "build:umd:min": "cross-env BABEL_ENV=webpack webpack --mode production -o dist/gw2-ui-builder.min.js",
    "clean": "del-cli lib es dist",
    "prepublish": "run-s build",
    "prewatch": "del-cli es",
    "watch": "run-s \"build:es --watch\""
  },
  "devDependencies": {
    "@babel/cli": "7.15.4",
    "@babel/core": "7.15.5",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-transform-runtime": "7.15.0",
    "@babel/preset-env": "7.15.4",
    "@babel/preset-typescript": "7.15.0",
    "@babel/runtime-corejs3": "7.15.4",
    "babel-loader": "8.2.2",
    "cross-env": "7.0.3",
    "del-cli": "4.0.1",
    "npm-run-all": "4.1.5",
    "webpack": "5.52.0",
    "webpack-cli": "4.8.0"
  },
  "peerDependencies": {
    "@babel/runtime-corejs3": "^7.15.4"
  }
}
